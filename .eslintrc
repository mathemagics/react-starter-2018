{
  "extends": "airbnb",
  "rules": {
    "strict": 0,
    "import/no-extraneous-dependencies": [ "error", { "devDependencies": true }],
    "no-unused-expressions": ["error", {"allowTaggedTemplates": true}]
  },
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}